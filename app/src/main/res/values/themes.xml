    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_accent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <style name="Theme.CountingDays.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DateTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_accent</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/general_color</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="Theme.CountingDays.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CountingDays.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
