<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleItemProgressActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="36dp"
                android:layout_height="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/delete_icon"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:tint="@color/white"
                android:textStyle="bold"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginStart="20dp"
                android:id="@+id/back_click"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:text="Flight"
                android:textAllCaps="true"
                android:fontFamily="@font/ubantu"
                android:id="@+id/Schedule_name_edit"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progress_layout"
                app:layout_constraintTop_toBottomOf="@+id/Schedule_name_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/circle_progressbar"
                    android:rotation="-90"
                    tools:progress="40"

                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/day_digit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/ubantu"
                        android:text="01"
                        android:textColor="@color/white"
                        android:textSize="65sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/day_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day_digit"
                        android:fontFamily="@font/ubantu"
                        android:text="days"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_layout"
                android:gravity="center"
                android:id="@+id/time_layout">

                <TextView
                    android:id="@+id/hour_digit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/ubantu"
                    android:text="02"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                     />


                <TextView
                    android:id="@+id/hourdots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_toRightOf="@+id/hour_digit"
                    android:text=":"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/minute_digit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/hourdots"
                    android:fontFamily="@font/ubantu"
                    android:text="01"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                     />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minute_dots"
                    android:layout_toRightOf="@+id/minute_digit"
                    android:layout_marginEnd="10dp"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    />


                <TextView
                    android:id="@+id/second_digit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/minute_dots"
                    android:fontFamily="@font/ubantu"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                     />


                <TextView
                    android:id="@+id/hour_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hour_digit"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/ubantu"
                    android:text="hours"
                    android:textColor="@color/white"
                     />

                <TextView
                    android:id="@+id/minute_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/minute_digit"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toRightOf="@+id/hour_label"
                    android:fontFamily="@font/ubantu"
                    android:text="minutes"
                    android:textColor="@color/white"
                     />


                <TextView
                    android:id="@+id/seconds_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_digit"
                    android:layout_toRightOf="@+id/minute_label"
                    android:fontFamily="@font/ubantu"
                    android:text="seconds"
                    android:textColor="@color/white"
                     />



            </RelativeLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/time_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Due June 18 2022"
                android:layout_marginStart="-4dp"
                android:id="@+id/due_date"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:fontFamily="@font/ubantu"
                android:textColor="@color/white"
                />


            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/my_template"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"
                app:gnt_template_type="@layout/gnt_small_template_view"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>